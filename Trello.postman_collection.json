	"item": [
		{
			"name": "Create board",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "01737959-7ed7-4f79-862b-de3525b3c5ba",
						"exec": [
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"const response = pm.response.json();\r",
							"console.log(response);\r",
							"\r",
							"pm.test(\"Board should be created\", function () {\r",
							"    pm.expect(response.name).to.eql(pm.environment.get(\"boardName\"));\r",
							"    pm.expect(response.closed).to.eql(false);\r",
							"});\r",
							"\r",
							"pm.test(\"Board shoul be private\", function () {\r",
							"    pm.expect(response.prefs.permissionLevel).to.eql(\"private\");\r",
							"});\r",
							"\r",
							"\r",
							"\r",
							"pm.environment.set(\"boardId\", response.id);\r",
							""
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"id": "3b327ea5-cae6-45f3-95af-73569fa39027",
						"exec": [
							"\r",
							"pm.environment.set(\"boardName\", getRandomeBoardName());\r",
							"\r",
							"function getRandomeBoardName(){\r",
							"    const boardName=\"My new board \"+parseInt(Math.random()*10000);\r",
							"    console.log(boardName);\r",
							"    return boardName;\r",
							"\r",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"url": {
					"raw": "https://api.trello.com/1/boards/?name={{boardName}}&key={{trellokeynew}}&token={{trellotokennew}}&defaultLists=false",
					"protocol": "https",
					"host": [
						"api",
						"trello",
						"com"
					],
					"path": [
						"1",
						"boards",
						""
					],
					"query": [
						{
							"key": "name",
							"value": "{{boardName}}"
						},
						{
							"key": "key",
							"value": "{{trellokeynew}}"
						},
						{
							"key": "token",
							"value": "{{trellotokennew}}"
						},
						{
							"key": "defaultLists",
							"value": "false"
						}
					]
				},
				"description": "used post request with api key and token generated by trello site and written some test with assertion"
			},
			"response": []
		},
